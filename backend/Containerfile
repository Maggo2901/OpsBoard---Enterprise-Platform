FROM node:18-alpine

WORKDIR /app

# Install dependencies strictly
COPY package.json package-lock.json ./
RUN npm ci --omit=dev

# Copy application code
COPY . .

# Environment Defaults (can be overridden)
ENV NODE_ENV=production
ENV PORT=3000

# Expose port
EXPOSE 3000

# Start application
CMD ["node", "src/server.js"]
