# Backend Port (internal to container network usually, but good to set)
PORT=3000

# Environment Mode
NODE_ENV=production

# Database Path in Container
DB_PATH=/data/database.sqlite

# Uploads Path in Container
UPLOADS_PATH=/app/data/uploads

# Published host ports (container-internal ports stay 80/3000)
FRONTEND_HOST_PORT=9010
BACKEND_HOST_PORT=9015

# CORS Origin (only needed for direct browser calls to backend host port)
# Keep this aligned with your frontend public URL.
CORS_ORIGIN=http://192.168.1.100:9010
